@model ProjectBAdminPanel.Models.AddMenuProductModel
@{
    ViewBag.Title = "AddNewProduct";
}

<h2>Yeni Ürün Ekle</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Ürün İsmi:</label>
        @Html.TextBoxFor(Model => Model.Product.ProductName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Fiyatı</label>
        @Html.TextBoxFor(Model => Model.Product.Price, new { @class = "form-control", type = "number", step = "any" })
    </div>
    <div class="form-group">
        <label>Kategori:</label>
        @Html.DropDownListFor(Model=>Model.Product.MenuCategoryId, Model.Categories.Select(x => new SelectListItem()
       {
            Text = x.MenuCategory,
            Value=x.Id.ToString()

       }), new { @class = "form-control" })
    </div>


    <a class="btn btn-secondary" href="@Url.Action("MenuCategory","Home")"><span class="fas fa-times mr-2"></span>İptal</a>
    <button type="submit" class="btn btn-success"><span class="fa fa-plus mr-2"></span>Ekle</button>
}